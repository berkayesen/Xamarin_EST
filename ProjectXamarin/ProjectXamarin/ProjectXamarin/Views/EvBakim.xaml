<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectXamarin.Views.EvBakim"
             Title="Kategoriler">
    <ContentPage.Content>
        <Grid Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="1" Text="Oda Spreyleri" BackgroundColor="Green" Clicked="Button_Clicked"/>
            <Button Grid.Row="2" Text="Çubuklu Oda Kokuları" BackgroundColor="Green" Clicked="Button_Clicked_1"/>
            <Button Grid.Row="3" Text="Yüzey Temizleyici" BackgroundColor="Green" Clicked="Button_Clicked_2"/>
            <Button Grid.Row="4" Text="Mutfak Sabunları" BackgroundColor="Green" Clicked="Button_Clicked_3"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>